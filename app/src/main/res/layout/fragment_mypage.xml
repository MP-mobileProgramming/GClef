<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dark_ffffff_000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:textColor="@color/color_dark_000000_ffffff"
            android:id="@+id/goToLoginButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:text=""
            android:textSize="30dp"
            android:padding="20dp"
            android:textAlignment="textStart"/>
        <TextView
            android:textColor="@color/color_dark_000000_ffffff"
            android:background="@drawable/comment_border"
            android:text="테마 설정"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:backgroundTint="@color/color_dark_000000_ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:buttonTint="@color/color_dark_000000_ffffff"
                android:textColor="@color/color_dark_000000_ffffff"
                android:id="@+id/lightRadio"
                android:text="Light Mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:buttonTint="@color/color_dark_000000_ffffff"
                android:textColor="@color/color_dark_000000_ffffff"
                android:id="@+id/darkRadio"
                android:text="Dark Mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:buttonTint="@color/color_dark_000000_ffffff"
                android:textColor="@color/color_dark_000000_ffffff"
                android:id="@+id/defaultRadio"
                android:text="Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>
</FrameLayout>