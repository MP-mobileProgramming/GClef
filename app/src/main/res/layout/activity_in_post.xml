<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InPostActivity"
    android:background="@color/color_dark_ffffff_000000"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/coverImageInPost"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    tools:ignore="MissingConstraints" />
                <ImageButton
                    android:id="@+id/playButton"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <TextView
                android:textColor="@color/color_dark_000000_ffffff"
                android:id="@+id/songTitleInPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:textColor="@color/color_dark_000000_ffffff"
                android:layout_marginTop="10dp"
                android:id="@+id/userNameInPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:textColor="@color/color_dark_000000_ffffff"
                android:id="@+id/songDetailInPost"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This song is.. This song is..This song is..This song is.."
                android:textSize="20dp"
                />

            <SeekBar
                android:id="@+id/seekBarInPost"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:background="@drawable/ic_baseline_chevron_right_24"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:textColor="@color/color_dark_000000_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/comment_item"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:textColor="@color/color_dark_000000_ffffff"
        android:id="@+id/commentEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="댓글 입력"
        android:gravity="bottom"
        android:layout_weight="1"
        />
        <ImageButton
            android:id="@+id/commentButton"
            android:src="@drawable/ic_baseline_reply_24"
            android:background="@drawable/circle_shape"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>


</LinearLayout>
